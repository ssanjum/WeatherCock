<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_in_password_gradient"
    android:orientation="vertical"
    tools:context="com.example.anjum.weathercock.activity.DetailsActvity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_medium">

        <TextView
            android:id="@+id/tv_detail_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/padding_large"
            android:text="India"
            android:textColor="@color/txt_dark_grey"
            android:textSize="@dimen/font_large"
            android:textStyle="bold" />

        <TextView
            style="@style/DefaultTextView"
            android:text="Currently"
            android:textColor="@color/black"
            android:textSize="@dimen/font_large"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/tv_detail_description"
            style="@style/DefaultTextView"
            android:text="Cloudy"
            android:textColor="@color/black"
            android:textSize="@dimen/font_medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_detail_temp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:gravity="end"
                android:text="67"
                android:textColor="@color/black"
                android:textSize="@dimen/font_xlarge"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_detail_image"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight=".7"
                android:src="@drawable/ic_action_name" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:drawableLeft="@drawable/ic_humidity"
                android:gravity="center_vertical"
                android:text="Humidity :"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small" />

            <TextView
                android:id="@+id/tv_detail_humidity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:text="23"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42dp"
                android:layout_weight=".2"
                android:drawableLeft="@drawable/ic_wind"
                android:gravity="center_vertical"
                android:text="Wind :"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small" />

            <TextView
                android:id="@+id/tv_detail_wind_speed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:gravity="fill_horizontal"
                android:text="7mph"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:drawableLeft="@drawable/ic_pressure"
                android:gravity="center_vertical"
                android:text="Pressure :"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small" />

            <TextView
                android:id="@+id/tv_detail_pressure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:gravity="fill_horizontal"
                android:text="23"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:drawableLeft="@drawable/ic_pressure"
                android:gravity="center_vertical"
                android:text="Sunrise :"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:gravity="fill_horizontal"
                android:text="5:45 a.m"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:orientation="vertical">

        <TextView
            style="@style/DefaultTextView"
            android:text="Hourly"
            android:textColor="@color/black"
            android:textSize="@dimen/font_large"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />
    </LinearLayout>

</LinearLayout>
