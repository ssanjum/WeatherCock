<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.anjum.weathercock.activity.HomeActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sign_up_email_gradiant"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ed_name_signUp"
            style="@style/DefaultEditText"
            android:layout_margin="@dimen/margin_large"
            android:hint="Name..."
            android:inputType="text"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/ed_email_signUp"
            style="@style/DefaultEditText"
            android:layout_margin="@dimen/margin_large"
            android:hint="Email..."
            android:inputType="text"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/ed_password_signUp"
            style="@style/DefaultEditText"
            android:layout_margin="@dimen/margin_large"
            android:hint="Password..."
            android:inputType="textPassword"
            android:textColorHint="@color/white" />


        <Button
            android:id="@+id/btn_signup"
            style="@style/DefaultVioletButton"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_large"
            android:text="SignUp" />


    </LinearLayout>


</LinearLayout>
